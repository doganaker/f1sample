
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="module" src="/js/lapsoperations.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

<br>
<br>

<div class="container">
    <div class="page-header">
        <h1>Laps</h1>
    </div>

    <br>
    <br>

    <div class="row">
        <div class="col-lg-3">
            <label class="px-2">Year:</label>
            <select class="form-control" name="" id="yearsselect">
            </select>
        </div>
        <div class="col-lg-3">
            <label class="px-2">Round:</label>
            <select name="" class="form-control" id="roundsselect">
            </select>
        </div>
        <div class="col-lg-3">
            <label class="px-2">Tour:</label>
            <select name="" class="form-control" id="tourselect">
            </select>
        </div>
    </div>

    <br>

    <div class="row">
        <table class="table " id="lb">
            <thead>
                <tr>
                    <th scope="col">Driver Id</th>
                    <th scope="col">Position</th>
                    <th scope="col">Lap Time</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>
